# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Standard
GET     /                           controllers.auth.login.AuthController.index

# Login
GET     /login                      controllers.auth.login.AuthController.login
POST    /login                      controllers.auth.login.AuthController.authenticate
GET     /logout                     controllers.auth.login.AuthController.logout

GET     /registration               controllers.auth.registration.RegistrationController.goToRegistration
POST    /registration               controllers.auth.registration.RegistrationController.registration

# Facebook
GET     /login/facebook             controllers.auth.login.FacebookAuthController.login(scope: String)
GET     /link/facebook              controllers.auth.login.FacebookAuthController.link(scope: String)
GET     /authorize/facebook         controllers.auth.login.FacebookAuthController.authorize

# Tasks
GET     /task                       controllers.Tasks.addTask
GET     /tasks                      controllers.Tasks.getTaskPage(page: Int ?= 1, filter: String ?= "")
POST    /tasks                      controllers.Tasks.newTask
GET     /task/:id                   controllers.Tasks.editTask(id: Long)
POST    /task/:id                   controllers.Tasks.updateTask(id: Long)
GET     /tasks/:id/delete           controllers.Tasks.deleteTask(id: Long)
GET     /tasks/:id/complete         controllers.Tasks.completeTask(id: Long)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

