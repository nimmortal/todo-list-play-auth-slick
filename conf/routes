# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Standard
GET     /                            controllers.Sessions.login
POST    /login                       controllers.Sessions.authenticate
GET     /logout                      controllers.Sessions.logout

# Messages
GET     /messages/main               controllers.Messages.main
GET     /messages/list               controllers.Messages.list
GET     /messages/detail/:id         controllers.Messages.detail(id: Int)
GET     /messages/write              controllers.Messages.write

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /task                       controllers.Tasks.addTask
GET     /tasks                      controllers.Tasks.allTasks
POST    /tasks                      controllers.Tasks.newTask
GET     /task/:id                   controllers.Tasks.editTask(id: Long)
POST    /task/:id                   controllers.Tasks.updateTask(id: Long)
POST    /tasks/:id/delete           controllers.Tasks.deleteTask(id: Long)
POST    /tasks/:id/complete         controllers.Tasks.completeTask(id: Long)